<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Khartyko.InsigniaCreator.MainApp.ViewModels"
        xmlns:local="using:Khartyko.InsigniaCreator.MainApp.Views"
        x:Class="Khartyko.InsigniaCreator.MainApp.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Insignia Creator"
        x:DataType="vm:MainWindowViewModel"
        Width="{Binding Width}"
        Height="{Binding Height}"
        TransparencyLevelHint="AcrylicBlur"
        Background="Transparent"
        ExtendClientAreaToDecorationsHint="True"
        RequestedThemeVariant="Dark">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Vertical">
            <local:AtlasTabView />
            <local:AtlasViewportView />
        </StackPanel>
    </StackPanel>
</Window>
